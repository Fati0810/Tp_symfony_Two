{% extends "admin/base.html.twig" %}

{% block main %}

<div class="container row g-3 align-items-center">
<h2>Commande{{commande.id}}</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Commande</th>
                <th scope="col">Membre</th>
                <th scope="col">Véhicule</th>
                <th scope="col">Date et heure de départ</th>
                <th scope="col">Date et heure de fin</th>
                <th scope="col">Prix total</th>
                <th scope="col">Date et heure d'enregistrement</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>{{commande.id}}</th>
                <td>{{commande.idMembreId}}</td>
                <td>{{commande.idVehiculeId}}</td>
                <td>{{commande.dateHeureDepart}}</td>
                <td>{{commande.dateHeureFin}}</td>
                <td>{{commande.prixTotal}}</td>
                <td>{{commande.dateEnregistrement}}</td>
                <td>
                <a href="{{ path('admin_commande_update',{'id' : commande.id})}}" style="color: black">
                <i class="fa-solid fa-pen-to-square"></i></a>
                <a href="{{ path('admin_commande_delete',{'id' : commande.id})}}" style="color: black">
                <i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

{% endblock %}